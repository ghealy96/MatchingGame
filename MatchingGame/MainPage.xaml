<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MatchingGame.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">

            <HorizontalStackLayout Spacing="50" HorizontalOptions="Center">
                
            </HorizontalStackLayout>
        
            
            <Button x:Name="Play" Text="Play" CommandParameter="46" TextColor="#FA1515" FontSize="Large" Clicked="PlayButton_Clicked" />

            <Button x:Name="ScoreBoard" Text="ScoreBoard" TextColor="#FA1515" FontSize="Large" Clicked="ScoreBoard_Clicked" />

            <Button x:Name="Exit" Text="Exit" TextColor="#FA1515" FontSize="Large" Clicked="Exit_Clicked" />



            <Grid x:Name="GameGrid" HorizontalOptions="Center" VerticalOptions="Center" BackgroundColor="White">

                
            </Grid>



        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
